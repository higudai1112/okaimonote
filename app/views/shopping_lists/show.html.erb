<div class="min-h-screen bg-base text-gray-800 py-2 px-4 sm:px-6 md:px-8">
  <div class="w-full max-w-md sm:max-w-lg md:max-w-xl mx-auto bg-white rounded-2xl md:rounded-3xl shadow-card p-6 md:p-8 border border-orange-100">

    <!-- アフィリエイトバナー -->
    <%= render "shared/affiliate_banner",
      link_url: "https://rpx.a8.net/svt/ejp?a8mat=45KGKW+3RQUPE+2HOM+63H8H&rakuten=y&a8ejpredirect=http%3A%2F%2Fhb.afl.rakuten.co.jp%2Fhgc%2F0ea62065.34400275.0ea62066.204f04c0%2Fa25121760412_45KGKW_3RQUPE_2HOM_63H8H%3Fpc%3Dhttp%253A%252F%252Fwww.rakuten.co.jp%252F%26m%3Dhttp%253A%252F%252Fm.rakuten.co.jp%252F",
      image_url: "https://hbb.afl.rakuten.co.jp/hsb/0ec09b9b.f2fdca6c.0eb4bbaa.95151395/",
      tracking_pixel_url: "https://www10.a8.net/0.gif?a8mat=45KGKW+3RQUPE+2HOM+63H8H",
      alt: "楽天でまとめ買い・日用品チェック" %>

    <!-- タイトル -->
    <h1 class="text-2xl md:text-3xl font-bold text-center text-orange-500 mb-8 flex justify-center items-center gap-2">
      <i class="fa-solid fa-cart-shopping text-2xl"></i>
      買い物リスト
    </h1>

    <!-- エラーメッセージ -->
    <%= render "shared/error_message", resource: @shopping_list %>

    <!-- 商品追加フォーム -->
    <%= form_with model: [@shopping_list, @shopping_item],
                  local: true,
                  class: "space-y-4" do |f| %>
      <div class="flex flex-col gap-3">
        <div class="relative" data-controller="shopping-autocomplete">
          <%= f.text_field :name,
                placeholder: "商品名を入力（例：にんじん）",
                class: "w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-orange-400 focus:outline-none shadow-sm transition",
                data: {
                  "shopping-autocomplete-target": "input",
                  action: "input->shopping-autocomplete#search"
                } %>

          <!-- 候補表示欄 -->
          <div id="shopping_autocomplete_results"
               data-shopping-autocomplete-target="results"
               class="absolute left-0 right-0 top-full z-[1000] mt-1 pointer-events-auto"></div>
        </div>
        <%= f.text_area :memo,
              rows: 2,
              placeholder: "メモ（例：広告の品）",
              class: "w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-orange-400 focus:outline-none shadow-sm transition" %>

        <%= f.submit "追加",
              class: "w-full bg-orange-500 hover:bg-orange-600 text-white py-2.5 rounded-xl font-semibold shadow-sm transition active:scale-[0.98]" %>
      </div>
    <% end %>

    <!-- 未購入品一覧 -->
    <h2 class="text-lg md:text-xl font-semibold mt-10 mb-4 flex items-center gap-2 text-gray-800">
      <i class="fa-solid fa-basket-shopping text-orange-400"></i>
      買うもの
    </h2>

    <ul id="shopping_items" class="space-y-3 text-left">
      <% @shopping_list.shopping_items.where(purchased: false).order(created_at: :desc).each do |item| %>
        <%= render partial: "shopping_items/item_row", locals: { shopping_item: item } %>
      <% end %>
    </ul>

    <!-- 購入済み -->
    <% purchased_items = @shopping_list.shopping_items.where(purchased: true) %>
    <div class="mt-10" id="purchased_section">
      <h2 class="text-lg md:text-xl font-semibold mb-3 mt-6 flex items-center gap-2 text-gray-800">
        <i class="fa-solid fa-circle-check text-green-500"></i>
        購入済み
      </h2>

      <!-- 購入済み商品一覧 -->
      <div id="purchased_items_list"></div>

      <!-- Stimulus confirmを使用した削除ボタン -->
      <div data-controller="confirm" class="flex justify-end items-center mb-3">
        <%= button_to delete_purchased_shopping_list_path,
            method: :delete,
            data: {
              action: "click->confirm#confirm",
              confirm_message: "購入済みの商品をすべて削除しますか？"
            },
            class: "flex items-center gap-2 text-red-500 hover:text-red-600 text-sm font-medium transition" do %>
          <i class="fa-solid fa-trash-can"></i>
          <span>購入済みを削除</span>
        <% end %>

        <!-- 共通確認モーダル -->
        <div data-confirm-target="modal"
             class="hidden fixed inset-0 bg-black/40 flex justify-center items-center z-50">
          <div class="bg-white rounded-2xl p-6 shadow-xl w-80 text-center border border-orange-100">
            <p data-confirm-target="message" class="text-gray-700 mb-4">
              購入済みの商品を削除しますか？
            </p>

            <div class="flex justify-center gap-4">
              <button data-action="click->confirm#proceed"
                      class="bg-red-500 text-white px-4 py-2 rounded-xl hover:bg-red-600 shadow">
                削除
              </button>
              <button data-action="click->confirm#cancel"
                      class="bg-gray-200 text-gray-700 px-4 py-2 rounded-xl hover:bg-gray-300">
                キャンセル
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- モーダル挿入用コンテナ -->
  <div id="modal_container"></div>
</div>