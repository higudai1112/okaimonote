<div class="min-h-screen bg-gray-50 py-10 px-4 flex justify-center">
  <div class="bg-white w-full max-w-lg rounded-2xl shadow-md p-6">

    <!-- タイトル -->
    <h1 class="text-2xl md:text-4xl font-extrabold text-orange-500 mt-10 mb-10 flex justify-center items-center gap-3">
      <i class="fa-solid fa-cart-shopping text-3xl md:text-4xl"></i>
      買い物リスト
    </h1>

    <%= render "shared/error_message", resource: @shopping_list %>

    <!-- 商品追加フォーム -->
    <%= form_with model: [@shopping_list, @shopping_item],
                  local: true,
                  class: "space-y-4 text-left" do |f| %>
      <div class="flex flex-col gap-3">
        <%= f.text_field :name,
              placeholder: "商品名を入力（例：にんじん）",
              class: "w-full border border-gray-300 rounded-xl p-2 focus:ring-2 focus:ring-orange-400 focus:outline-none" %>

        <%= f.text_area :memo,
              rows: 2,
              placeholder: "メモ（例：広告の品）",
              class: "w-full border border-gray-300 rounded-xl p-2 focus:ring-2 focus:ring-orange-400 focus:outline-none" %>

        <%= f.submit "追加",
              class: "w-full bg-orange-500 hover:bg-orange-600 text-white py-2 rounded-xl font-semibold shadow-sm transition" %>
      </div>
    <% end %>

    <!-- 未購入品一覧 -->
    <h2 class="text-lg font-semibold mt-6 mb-3 flex items-center gap-2 text-gray-700 border-b border-gray-200 pb-1">
      <i class="fa-solid fa-basket-shopping"></i>
      買うもの
    </h2>

    <ul id="shopping_items" class="space-y-3 text-left">
      <% @shopping_list.shopping_items.where(purchased: false).order(created_at: :desc).each do |item| %>
        <%= render partial: "shopping_items/item_row", locals: { shopping_item: item } %>
      <% end %>
    </ul>

    <!-- 購入済み -->
    <% purchased_items = @shopping_list.shopping_items.where(purchased: true) %>
    <div class="mt-10" id="purchased_section">
      <h2 class="text-lg font-semibold mb-3 mt-6 flex items-center gap-2 text-gray-700 border-b border-gray-200 pb-1">
        <i class="fa-solid fa-circle-check text-green-500"></i>
        購入済み
      </h2>

      <!-- 削除ボタン -->
      <div class="flex justify-end items-center mb-3">
        <button type="button"
                onclick="openDeleteModal()"
                class="flex items-center gap-2 text-red-500 hover:text-red-600 text-sm transition">
          <i class="fa-solid fa-trash-can"></i>
          <span>購入済みを削除</span>
        </button>
      </div>

      <!-- モーダル -->
      <div id="deleteModal"
           class="hidden fixed inset-0 flex items-center justify-center bg-black bg-opacity-40 z-50">
        <div class="bg-white rounded-3xl shadow-2xl p-6 w-80 text-center">
          <h3 class="text-lg font-semibold text-gray-700 mb-4">本当に削除しますか？</h3>

          <div class="flex justify-center gap-4">
          <!-- キャンセルボタン -->
            <button type="button"
                    class="px-4 py-2 bg-gray-200 rounded-xl hover:bg-gray-300 transition"
                    onclick="closeDeleteModal()">
              キャンセル
            </button>

            <!-- 削除ボタン -->
            <%= button_to "削除する",
                          delete_purchased_shopping_list_path,
                          method: :delete,
                          data: { turbo: false },
                          form: { class: "inline-block" },
                          class: "px-4 py-2 !bg-red-600 !text-white rounded-xl hover:bg-red-700 transition font-semibold shadow-sm" %>
          </div>
        </div>
      </div>

      <!-- JS -->
      <script>
        function openDeleteModal() {
          const modal = document.getElementById("deleteModal");
          console.log("モーダル要素:", modal);
          modal.classList.remove("hidden");
        }

        function closeDeleteModal() {
          const modal = document.getElementById("deleteModal");
          modal.classList.add("hidden");
        }
      </script>

      <!-- 購入済み商品一覧 -->
      <ul id="purchased_items_list" class="space-y-3 text-left">
        <% purchased_items.order(updated_at: :desc).each do |item| %>
          <%= render partial: "shopping_items/item_row", locals: { shopping_item: item } %>
        <% end %>
      </ul>
    </div>
  </div>
</div>