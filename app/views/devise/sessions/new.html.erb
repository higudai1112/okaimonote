<div class="min-h-screen bg-base text-gray-800 flex items-center justify-center px-4 py-10">
  <div class="bg-white rounded-2xl shadow-lg border border-orange-100 p-8 w-full max-w-md">

    <!-- 見出し -->
    <h2 class="text-2xl font-bold text-center text-orange-500 mb-6">
      ログイン
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "shared/error_message", resource: resource %>

      <!-- メールアドレス -->
      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "example@email.com",
              class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-orange-400 focus:border-orange-400 px-3 py-2 outline-none transition placeholder-gray-400" %>
      </div>

      <!-- パスワード -->
      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.password_field :password,
              autocomplete: "current-password",
              placeholder: "••••••",
              class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-orange-400 focus:border-orange-400 px-3 py-2 outline-none transition" %>
      </div>

      <!-- ログイン維持 -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between mb-4 text-sm text-gray-600">
          <label class="inline-flex items-center">
            <%= f.check_box :remember_me, class: "rounded border-gray-300 text-orange-500 focus:ring-orange-400" %>
            <span class="ml-2">ログインを維持する</span>
          </label>
          <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "text-orange-500 hover:underline text-sm" %>
        </div>
      <% end %>

      <!-- ボタン -->
      <div class="mt-6">
        <%= f.submit "ログイン",
              class: "w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-2.5 rounded-full shadow-md transition-transform active:scale-[0.98]" %>
      </div>
    <% end %>

    <!-- 区切り線 -->
    <div class="flex items-center my-6">
      <div class="flex-grow border-t border-gray-200"></div>
      <span class="mx-2 text-gray-400 text-sm">または</span>
      <div class="flex-grow border-t border-gray-200"></div>
    </div>

    <!-- 新規登録リンク -->
    <div class="text-center">
      <p class="text-sm text-gray-600 mb-2">まだアカウントをお持ちでない方</p>
      <%= link_to "新規登録はこちら",
            new_registration_path(resource_name),
            class: "inline-block text-orange-500 font-semibold hover:underline" %>
    </div>
  </div>
</div>
