<!-- エラーがあれば表示させる -->
<% if resource && resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false" class="mb-4 bg-red-50 border border-red-300 text-red-800 rounded p-4">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 resource: resource.class.model_name.human) %>
    </h2>
    <ul class="list-disc pl-5">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
