<nav aria-label="アカウント関連リンク" class="mt-6 text-center space-y-3">
  <% if controller_name != 'sessions' %>
    <div>
      <%= link_to "ログインはこちら", new_session_path(resource_name), class: "text-sm hover:underline text-gray-500 hover:text-gray-500 transition" %>
    </div>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "text-sm hover:underline text-gray-500 hover:text-gray-500 transition" %>
    </div>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <div>
      <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "text-sm hover:underline text-gray-500 hover:text-gray-500 transition" %>
    </div>
  <% end %>

  <% if controller_name != 'pages' %>
    <div>
      <%= link_to "タイトル画面に戻る", root_path, class: "text-sm hover:underline text-gray-500 hover:text-gray-500 transition" %>
    </div>
  <% end %>
</nav>