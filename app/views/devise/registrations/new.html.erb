<h2 class="text-xl text-center mb-4">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<!-- autofocus初期カーソル配置,autocomplete過去の入力記憶 -->
  <div class="form-group">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード (6文字以上) " %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :avatar, "アイコン画像 (任意)" %><br />
    <%= f.file_field :avatar, class: "form-control" %>
    <p class="text-xs text-gray-500">未選択の場合はデフォルトのアイコンが表示されます</p>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded w-full" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
