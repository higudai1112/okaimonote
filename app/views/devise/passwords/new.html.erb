<div class="min-h-screen bg-base text-gray-800 flex items-center justify-center px-4 sm:px-6 md:px-10 py-10">
  <div class="bg-white rounded-2xl shadow-lg border border-orange-100 p-6 sm:p-8 w-full max-w-md sm:max-w-lg">

    <!-- 見出し -->
    <h2 class="text-xl sm:text-2xl font-bold text-center text-orange-500 mb-6">
      パスワードの再設定
    </h2>

    <!-- 説明 -->
    <p class="text-sm sm:text-base text-gray-600 text-center mb-6 leading-relaxed">
      登録済みのメールアドレスを入力してください。<br>
      パスワード再設定用のリンクをメールでお送りします。
    </p>

    <!-- フォーム -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-5" }) do |f| %>
      <%= render "shared/error_message", resource: resource %>

      <div>
        <%= f.label :email, "登録済みメールアドレス", class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "example@email.com",
              class: "w-full border-gray-300 rounded-xl p-2.5 focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition placeholder-gray-400" %>
      </div>

      <div class="pt-2">
        <%= f.submit "パスワード再設定メールを送信",
              class: "w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-2.5 rounded-full shadow-md transition-transform active:scale-[0.98]" %>
      </div>
    <% end %>

    <!-- リンク -->
    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

