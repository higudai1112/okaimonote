<div class="min-h-screen bg-base text-gray-800 py-2 px-4">
  <div class="max-w-md mx-auto bg-white rounded-2xl shadow-card p-8 border border-orange-100">

    <!-- タイトル -->
    <h1 class="text-2xl font-bold text-center text-brand mb-6">価格登録</h1>

    <!-- エラーメッセージ -->
    <%= render "shared/error_message", resource: @price_record %>

    <!-- モード切り替えボタン -->
    <div class="flex justify-center gap-4 mb-8">
      <%= link_to "新規登録",
                  new_price_record_path(mode: :new),
                  class: "px-5 py-2.5 rounded-full font-semibold transition duration-200 shadow-sm border text-sm
                          #{@mode != 'existing' ? 'bg-orange-500 text-white hover:bg-orange-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-100'}" %>

      <%= link_to "既存から選択",
                  new_price_record_path(mode: :existing),
                  class: "px-5 py-2.5 rounded-full font-semibold transition duration-200 shadow-sm border text-sm
                          #{@mode == 'existing' ? 'bg-orange-500 text-white hover:bg-orange-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-100'}" %>
    </div>

    <!-- フォーム本体 -->
    <% if @mode == 'existing' %>
      <%= render 'form_existing', price_record: @price_record, url: price_records_path %>
    <% else %>
      <%= render 'form_new', price_record: @price_record, url: price_records_path %>
    <% end %>

  </div>
</div>