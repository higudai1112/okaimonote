<div class="min-h-screen bg-base text-gray-800 py-10 px-4">
  <div class="max-w-md mx-auto bg-white rounded-2xl shadow-card p-8 border border-orange-100">

    <!-- 戻るボタン -->
    <%= link_to product_path(@price_record.product),
          class: "inline-flex items-center text-gray-600 hover:text-brand mb-4 transition-colors duration-200" do %>
      <i class="fa-solid fa-arrow-left mr-2"></i>
      戻る
    <% end %>

    <!-- 見出し -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800 text-center flex-1">履歴の編集</h1>

      <!-- Stimulus confirmを適用した削除ボタン -->
      <div data-controller="confirm" class="relative">
        <%= button_to product_price_record_path(@product, @price_record),
              method: :delete,
              data: {
                action: "click->confirm#confirm",
                confirm_message: "この履歴を削除しますか？"
              },
              class: "text-red-500 hover:text-red-600 transition text-xl" do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>

        <!-- 共通確認モーダル -->
        <div data-confirm-target="modal"
             class="hidden fixed inset-0 bg-black/40 flex justify-center items-center z-50">
          <div class="bg-white rounded-2xl p-6 shadow-xl w-80 text-center border border-orange-100">
            <p data-confirm-target="message" class="text-gray-700 mb-4">
              この履歴を削除しますか？
            </p>

            <div class="flex justify-center gap-4">
              <button data-action="click->confirm#proceed"
                      class="bg-red-500 text-white px-4 py-2 rounded-xl hover:bg-red-600 shadow">
                削除
              </button>
              <button data-action="click->confirm#cancel"
                      class="bg-gray-200 text-gray-700 px-4 py-2 rounded-xl hover:bg-gray-300">
                キャンセル
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- エラーメッセージ -->
    <%= render "shared/error_message", resource: @price_record %>

    <!-- 編集フォーム -->
    <%= form_with model: [@product, @price_record], local: true, class: "space-y-5" do |f| %>

      <!-- 商品名(表示のみ) -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">商品名</label>
        <p class="bg-gray-50 p-2 rounded-lg border border-gray-200 text-gray-800">
          <%= @price_record.product.name %>
        </p>
      </div>

      <!-- お店選択 -->
      <div>
        <%= f.label :shop_id, "店名", class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.collection_select :shop_id,
              current_user.shops.order(:name),
              :id, :name,
              { prompt: "お店を選択" },
              class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-orange-400
                      focus:border-orange-400 px-3 py-2 bg-white outline-none transition shadow-sm" %>
      </div>

      <!-- 価格 -->
      <div>
        <%= f.label :price, "価格", class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.number_field :price,
              placeholder: "例：298",
              class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-orange-400
                      focus:border-orange-400 px-3 py-2 outline-none transition placeholder-gray-400 shadow-sm" %>
      </div>

      <!-- 日付 -->
      <div>
        <%= f.label :purchased_at, "日付", class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.date_field :purchased_at,
              class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-orange-400
                      focus:border-orange-400 px-3 py-2 outline-none transition shadow-sm" %>
      </div>

      <!-- メモ -->
      <div>
        <%= f.label :memo, "メモ", class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.text_area :memo,
              rows: 3,
              placeholder: "例：広告の品、まとめ買いなど",
              class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-orange-400
                      focus:border-orange-400 px-3 py-2 outline-none transition placeholder-gray-400 shadow-sm" %>
      </div>

      <!-- 更新ボタン -->
      <div class="pt-3">
        <%= f.submit "更新する",
              class: "w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-2.5
                      rounded-xl shadow-md transition-transform active:scale-[0.98]" %>
      </div>
    <% end %>
  </div>
</div>