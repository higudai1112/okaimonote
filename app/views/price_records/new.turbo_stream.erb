<%= turbo_stream.replace "product_select" do %>
  <div id="product_select" class="mb-6">
    <%= label_tag "price_record_product_id", "商品名",
          class: "block text-sm font-semibold text-gray-700 mb-1" %>

    <%= select_tag "price_record[product_id]",
          options_from_collection_for_select(@products, :id, :name, params.dig(:price_record, :product_id)),
          prompt: "選択してください",
          class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-orange-400
                  focus:border-orange-400 px-3 py-2 bg-white outline-none transition
                  placeholder-gray-400 shadow-sm" %>
  </div>
<% end %>