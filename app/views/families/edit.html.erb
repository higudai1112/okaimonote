<div class="min-h-screen bg-base flex items-center justify-center px-4 py-10">
  <div class="bg-white rounded-2xl shadow-lg p-8 w-full max-w-md border border-orange-100">

    <h2 class="text-2xl font-bold mb-6 text-orange-500 text-center">
      ファミリー名の変更
    </h2>

    <%= form_with model: @family, url: family_path, method: :patch, class: "space-y-6" do |f| %>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">ファミリー名</label>
        <%= f.text_field :name,
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-orange-300 focus:border-orange-400" %>
      </div>

      <div class="mt-6">
        <%= f.submit "更新する",
              class: "w-full bg-orange-500 text-white font-semibold py-2 rounded-lg hover:bg-orange-600" %>
      </div>

    <% end %>

    <div class="text-center mt-4">
      <%= link_to "戻る", family_path, class: "text-sm text-gray-600 underline" %>
    </div>

  </div>
</div>
