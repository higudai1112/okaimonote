<div class="min-h-screen bg-base flex items-center justify-center px-4 sm:px-6 md:px-10 py-10">
  <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8 w-full max-w-md sm:max-w-lg border border-orange-100">

    <h2 class="text-xl sm:text-2xl font-bold mb-6 text-orange-500 text-center">
      ファミリー名の変更
    </h2>

    <%= form_with model: @family, url: family_path, method: :patch, class: "space-y-6" do |f| %>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">ファミリー名</label>
        <%= f.text_field :name,
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-300 focus:border-orange-400 outline-none transition placeholder-gray-400" %>
      </div>

      <div class="mt-6">
        <%= f.submit "更新する",
              class: "w-full bg-orange-500 text-white font-semibold py-2.5 rounded-lg shadow hover:bg-orange-600 transition-transform active:scale-[0.98]" %>
      </div>

    <% end %>

    <div class="text-center mt-6">
      <%= link_to "戻る", family_path, class: "text-sm text-gray-500 hover:text-gray-700 underline" %>
    </div>

  </div>
</div>
