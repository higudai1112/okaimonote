<!-- 商品1件（未購入／購入済みの見た目を切り替え） -->
<li id="shopping_item_<%= shopping_item.id %>"
    class="flex justify-between items-center bg-white px-4 py-3 rounded-2xl shadow-sm border border-gray-200 hover:shadow-md transition duration-150 ease-in-out w-full max-w-md mx-auto">

  <!-- 商品情報 -->
  <div class="flex flex-col text-left">
    <span class="text-base font-medium <%= shopping_item.purchased ? 'line-through text-gray-400' : 'text-gray-700' %>">
      <%= shopping_item.name %>
    </span>

    <% if shopping_item.memo.present? %>
      <span class="text-sm flex items-center gap-1 mt-1 <%= shopping_item.purchased ? 'text-gray-400' : 'text-gray-500' %>">
        <i class="fa-regular fa-note-sticky"></i>
        <%= shopping_item.memo %>
      </span>
    <% end %>
  </div>

  <!-- 操作ボタン群 -->
  <div class="flex items-center gap-4">
    <!-- 編集ボタン -->
    <%= link_to edit_shopping_list_shopping_item_path(shopping_item, format: :turbo_stream),
                data: { turbo_stream: true },
                class: "text-gray-400 hover:text-orange-500 transition" do %>
      <i class="fa-solid fa-ellipsis-vertical text-lg"></i>
    <% end %>

    <!-- 購入トグルボタン -->
    <%= button_to shopping_list_shopping_item_path(shopping_item),
                  method: :patch,
                  form: { data: { turbo_stream: true } },
                  class: "text-orange-500 hover:text-orange-600 transition" do %>
      <% if shopping_item.purchased %>
        <i class="fa-solid fa-rotate-left text-lg"></i>
      <% else %>
        <i class="fa-solid fa-cart-arrow-down text-lg"></i>
      <% end %>
    <% end %>
  </div>
</li>