<turbo-stream action="append" target="modal_container">
  <template>
    <div id="modal"
         data-controller="modal"
         data-action="click->modal#closeBackground keydown@document->modal#closeByEsc"
         class="fixed inset-0 flex items-center justify-center bg-black/50 z-50">

      <div class="relative bg-white rounded-2xl shadow-2xl w-11/12 max-w-md p-6 border border-orange-100"
           data-action="click->modal#stop">

        <!-- タイトル -->
        <h2 class="text-lg font-semibold text-brand flex items-center gap-2 mb-4">
          <i class="fa-solid fa-pen-to-square text-brand"></i>
          商品を編集
        </h2>

        <!-- フォーム -->
        <%= render "form", shopping_item: @shopping_item %>

        <!-- 閉じるボタン -->
        <button type="button"
                class="absolute top-3 right-3 text-gray-400 hover:text-gray-600 transition"
                data-action="click->modal#close">
          <i class="fa-solid fa-xmark text-xl"></i>
        </button>
      </div>
    </div>
  </template>
</turbo-stream>