<%# ================================
    未購入リストを更新
================================ %>
<turbo-stream action="replace" target="shopping_items">
  <template>
    <%= render partial: "shopping_items/not_purchased_list",
               formats: [:html],
               locals: {
                 items: @shopping_list.shopping_items
                                      .where(purchased: false)
                                      .order(created_at: :desc)
               } %>
  </template>
</turbo-stream>

<%# ================================
    購入済みリストを更新
================================ %>
<turbo-stream action="replace" target="purchased_items_list">
  <template>
    <%= render partial: "shopping_items/purchased_items",
               formats: [:html],
               locals: {
                 items: @shopping_list.shopping_items
                                      .where(purchased: true)
                                      .order(updated_at: :desc)
               } %>
  </template>
</turbo-stream>

<%# ================================
    編集モーダルが開いていれば閉じる
================================ %>
<turbo-stream action="remove" target="modal"></turbo-stream>
