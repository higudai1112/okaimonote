<div class="min-h-screen bg-base text-gray-800 py-10 px-4 flex justify-center">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-card p-8 md:p-10 border border-orange-100">
    <h1 class="text-2xl md:text-3xl font-bold text-center text-brand mb-6">お問い合わせ</h1>

    <% if flash[:notice] %>
      <div class="mb-6 bg-green-100 border border-green-300 text-green-700 px-4 py-3 rounded-lg text-center shadow-sm text-base md:text-lg">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_with url: contact_path, method: :post, local: true do |f| %>
      <div class="space-y-6">
        <div>
          <%= f.label :nickname, "ニックネーム", class: "block text-gray-700 font-medium mb-1 md:mb-2 text-base md:text-lg" %>
          <%= f.text_field :nickname,
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 md:py-3 text-base text-gray-800 focus:outline-none focus:ring-2 focus:ring-brand transition",
                required: true,
                placeholder: "例：おかいも太郎" %>
        </div>

        <div>
          <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-medium mb-1 md:mb-2 text-base md:text-lg" %>
          <%= f.email_field :email,
                class: "w-full border border-gray-300 rounded-lg px-4 py-2  md:py-3 text-base text-gray-800 focus:outline-none focus:ring-2 focus:ring-brand transition",
                required: true,
                placeholder: "例：sample@email.com" %>
        </div>

        <div>
          <%= f.label :message, "お問い合わせ内容", class: "block text-gray-700 font-medium mb-1 md:mb-2 text-base md:text-lg" %>
          <%= f.text_area :message,
                rows: 6,
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-gray-800 focus:outline-none focus:ring-2 focus:ring-brand transition",
                required: true,
                placeholder: "内容を入力してください" %>
        </div>

        <div class="text-center pt-2 md:pt-4">
          <%= f.submit "送信する",
                class: "bg-brand text-white font-semibold px-8 py-2 md:py-3 rounded-full shadow hover:bg-orange-600 transition duration-200 text-base md:text-lg" %>
        </div>
      </div>
    <% end %>

    <div class="text-center mt-8">
      <%= link_to '戻る',
            user_signed_in? ? settings_path : root_path,
            class: "inline-block bg-gray-200 text-gray-700 px-6 py-2 md:px-8 md:py-3 rounded-full shadow hover:bg-gray-300 transition duration-200 text-base md:text-lg" %>
    </div>
  </div>
</div>