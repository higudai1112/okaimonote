<div class="bg-white rounded-lg shadow py-5 px-6 space-y-4">
  <p class="text-center font-semibold text-gray-700 mb-3">
    ファミリー共有
  </p>

  <!-- ファミリー作成 -->
  <%= link_to new_family_path,
      class: "block w-full text-center bg-orange-100 text-orange-600 font-semibold py-3 rounded-lg hover:bg-orange-200 transition" do %>
    <i class="fa-solid fa-plus mr-2"></i>
    ファミリーを作成する
  <% end %>

  <!-- ファミリー参加 -->
  <%= link_to enter_family_code_path,
      class: "block w-full text-center bg-white border border-orange-200 text-orange-600 font-semibold py-3 rounded-lg hover:bg-orange-50 transition" do %>
    <i class="fa-solid fa-user-group mr-2"></i>
    ファミリーに参加する
  <% end %>
</div>