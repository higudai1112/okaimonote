<div class="bg-white rounded-lg md:rounded-2xl shadow p-5 md:p-6 border border-orange-100 space-y-4">
  <p class="text-center font-semibold text-gray-700 mb-4 md:mb-5 text-base md:text-lg">
    ファミリー共有
  </p>

  <!-- ファミリー作成 -->
  <%= link_to new_family_path,
      class: "block w-full text-center bg-orange-100 text-orange-600 font-semibold py-3 rounded-lg md:rounded-xl hover:bg-orange-200 transition text-sm" do %>
    <i class="fa-solid fa-plus mr-2"></i>
    ファミリーを作成する
  <% end %>

  <!-- ファミリー参加 -->
  <%= link_to enter_family_code_path,
      class: "block w-full text-center bg-white border border-orange-200 text-orange-600 font-semibold py-3 rounded-lg md:rounded-xl hover:bg-orange-50 transition text-sm" do %>
    <i class="fa-solid fa-user-group mr-2"></i>
    ファミリーに参加する
  <% end %>
</div>