<div class="bg-white rounded-lg md:rounded-2xl shadow p-5 md:p-6 border border-orange-100">

  <p class="text-center font-semibold text-gray-700 mb-4 md:mb-5 text-base md:text-lg">
    ファミリー共有
  </p>

  <!-- 家族名 -->
  <div class="mb-4">
    <p class="text-gray-600 text-sm mb-1">グループ名</p>
    <p class="font-bold text-gray-800 text-base md:text-lg"><%= @family.name %></p>
  </div>

  <!-- メンバー人数 -->
  <div class="mb-4">
    <p class="text-gray-600 text-sm mb-1">メンバー人数</p>
    <p class="font-bold text-gray-800 text-base md:text-lg"><%= @family.users.count %> 人</p>
  </div>

  <!-- 詳細ページへ -->
  <%= link_to family_path,
      class: "w-full block text-center bg-orange-100 text-orange-600 font-semibold py-3 rounded-lg md:rounded-xl shadow hover:bg-orange-200 transition text-sm" do %>
    ファミリー詳細
  <% end %>

</div>

