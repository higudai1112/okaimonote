<div class="min-h-screen bg-base pt-8 pb-24 px-4 flex justify-center">
  <div class="w-full max-w-md">
    <h1 class="text-2xl md:text-3xl font-bold text-center mb-6 text-gray-800">設定</h1>
    <div class="border-t border-gray-300 mb-6"></div>

    <div class="space-y-4">
      <%= link_to 'プロフィール', profile_path, class: "block w-full text-center bg-white py-3 md:py-3.5 rounded-lg shadow hover:bg-orange-50 transition text-sm" %>
      <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "block w-full text-center bg-white py-3 md:py-3.5 rounded-lg shadow hover:bg-orange-50 transition text-sm" %>

      <!-- ファミリー共有 -->
      <div class="bg-white rounded-lg shadow p-4 md:p-6">
        <%= render "settings/family/#{current_user.family_role_view}" %>
      </div>

      <%= link_to '利用規約', terms_path, class: "block w-full text-center bg-white py-3 md:py-3.5 rounded-lg shadow hover:bg-orange-50 transition text-sm" %>
      <%= link_to 'プライバシーポリシー', privacy_path, class: "block w-full text-center bg-white py-3 md:py-3.5 rounded-lg shadow hover:bg-orange-50 transition text-sm" %>
      <%= link_to 'お問い合わせ', contact_path, class: "block w-full text-center bg-white py-3 md:py-3.5 rounded-lg shadow hover:bg-orange-50 transition text-sm" %>

      <!-- 使い方ガイド -->
      <%= link_to '使い方ガイド', guide_path, class: "block w-full text-center bg-white py-3 md:py-3.5 rounded-lg shadow hover:bg-orange-50 transition text-orange-500 font-semibold text-sm" %>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>