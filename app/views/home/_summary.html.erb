<div id= "summary" class="price-summary bg-white shadow p-4 mb-6">
  <h2 class="text-lg font-semibold mb-3">価格サマリー</h2>
  <% if summary_empty?(@min_price, @max_price, @average_price, @last_price) %>
    <p class="text-gray-500">まだ価格の登録がありません</p>
  <% else %>
    <div class="flex justify-between">
      <div>最安値: <span class="text-red-500"><%= display_price(@min_price) %></span></div>
      <div>最高値: <span class="text-gray-700"><%= display_price(@max_price) %></span></div>
    </div>
    <div class="mt-2">平均価格: <span class="text-gray-700"><%= display_price(@average_price) %></span></div>
    <div class="mt-2">前回購入: <span class="text-gray-700"><%= display_price(@last_price) %></span>（<%= @last_purchased_at&.strftime('%Y/%m/%d') || '----/--/--' %>）</div>
  <% end %>
</div>