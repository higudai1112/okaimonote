<!DOCTYPE html>
<html>
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function(w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : '';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, 'script', 'dataLayer', 'GTM-MW8CKGL2');
    </script>
    <!-- End Google Tag Manager -->

    <title><%= content_for(:title) || "App" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <%= javascript_include_tag "application", type: "module" %>
    <%= turbo_page_requires_reload %>

    <!-- OGP設定 -->
    <% meta = default_meta %>
    <meta property="og:site_name" content="<%= meta[:site] %>">
    <meta property="og:title" content="<%= meta[:title] %>">
    <meta property="og:description" content="<%= meta[:description] %>">
    <meta property="og:image" content="<%= meta[:image] %>">
    <meta property="og:url" content="<%= meta[:url] %>">
    <meta property="og:type" content="<%= meta[:type] %>">
    <meta property="og:locale" content="<%= meta[:locale] %>">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= meta[:title] %>">
    <meta name="twitter:description" content="<%= meta[:description] %>">
    <meta name="twitter:image" content="<%= meta[:image] %>">
    <meta name="twitter:site" content="@okaimonoto_team"> <!-- 任意 -->
  </head>

  <body class="min-h-screen bg-base text-gray-800 flex flex-col">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-MW8CKGL2"
        height="0"
        width="0"
        style="display:none;visibility:hidden">
      </iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <main class="flex-grow pt-6 pb-20 px-0 md:px-0">
      <%= yield %>
    </main>

    <!-- フラッシュメッセージ -->
    <% flash.each do |type, message| %>
      <% color = type == "alert" ? "bg-red-500" : "bg-green-500" %>

      <div class="flash-message fixed bottom-20 left-1/2 transform -translate-x-1/2
                  <%= color %> text-white font-semibold py-2 px-4 rounded-full
                  shadow-lg z-[60] text-sm whitespace-nowrap max-w-[90vw] transition-opacity duration-500">
        <%= message %>
      </div>
    <% end %>

    <!-- フラッシュ自動フェードアウト -->
    <script>
      function fadeFlashMessage() {
        const flash = document.querySelector(".flash-message");
        if (!flash) return;

        setTimeout(() => {
          flash.style.opacity = "0";

          // 完全に消えたら削除（フッターと重なるのを防ぐ）
          setTimeout(() => flash.remove(), 500);
        }, 2500); // 表示後 2.5秒でフェードアウト
      }

      document.addEventListener("DOMContentLoaded", fadeFlashMessage);
      document.addEventListener("turbo:load", fadeFlashMessage);
    </script>

    <!-- モーダルエリア -->
    <div id="modal_container"></div>

    <%# ログイン済みユーザーのみフッターを表示 %>
    <%= render "shared/footer" if user_signed_in? %>

    <!-- ローディングオーバーレイ -->
    <div
      data-controller="loading"
      data-loading-target="overlay"
      class="fixed inset-0 z-[9999] flex flex-col items-center justify-center bg-white/70 backdrop-blur-sm hidden"
    >
      <!-- ドット3つのアニメ -->
      <div class="flex space-x-2 mb-3">
        <div class="w-3 h-3 bg-orange-500 rounded-full animate-bounce"></div>
        <div class="w-3 h-3 bg-orange-400 rounded-full rounded-full animate-bounce [animation-delay:0.15s]"></div>
        <div class="w-3 h-3 bg-orange-300 rounded-full animate-bounce [animation-delay:0.3s]"></div>
      </div>

      <p class="text-sm text-gray-700 font-medium">
        読み込み中です…
      </p>
    </div>
  </body>
</html>
