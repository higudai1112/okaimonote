<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <li>
    <span class="px-3 py-1.5 bg-orange-500 text-white rounded-lg font-semibold shadow-sm">
      <%= page.number %>
    </span>
  </li>
<% else %>
  <li>
    <%= link_to page.number, url,
      class: "px-3 py-1.5 border border-gray-300 rounded-lg text-gray-600 hover:bg-orange-50 hover:text-orange-500 transition",
      rel: (page.next? ? "next" : (page.prev? ? "prev" : nil)) %>
  </li>
<% end %>
