<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.last? %>
  <li>
    <span class="px-3 py-1.5 border border-gray-200 rounded-lg text-gray-300 cursor-not-allowed">&raquo;</span>
  </li>
<% else %>
  <li>
    <%= link_to raw("&raquo;"), url,
      class: "px-3 py-1.5 border border-gray-300 rounded-lg text-gray-500 hover:bg-orange-50 hover:text-orange-500 transition",
      rel: "next" %>
  </li>
<% end %>
