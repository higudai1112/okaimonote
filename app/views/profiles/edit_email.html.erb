<h2>メールアドレスの変更</h2>

<%= form_with model: @user, url: update_profile_path, local: true do |f| %>
  <div class= "form-group">
    <%= f.label :email, "新しいメールアドレス" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class= "form-group">
    <%= f.label :current_password, "パスワード" %>
    <%= f.password_field :current_password, class: "form-control" %>
  </div>

  <%= f.submit "変更する", class: "btn btn-primary mt-2" %>
<% end %>

<%= link_to "戻る", profile_path, class: "btn btn-secondary mt-3" %>