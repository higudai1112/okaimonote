<div class="min-h-screen bg-base flex justify-center items-center text-gray-800 py-10 px-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-card p-8 md:p-10 border border-orange-100">
    <h2 class="text-2xl font-bold text-center text-brand mb-6">メールアドレスの変更</h2>

    <%= form_with model: @user, url: update_email_profile_path, local: true do |f| %>
      <div class="space-y-6">

        <!-- 新しいメールアドレス -->
        <div>
          <%= f.label :email, "新しいメールアドレス", class: "block text-gray-700 font-medium mb-2" %>
          <%= f.email_field :email,
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-brand transition",
                placeholder: "example@mail.com" %>
        </div>

        <!-- 現在のパスワード -->
        <div>
          <%= f.label :current_password, "現在のパスワード", class: "block text-gray-700 font-medium mb-2" %>
          <%= f.password_field :current_password,
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-brand transition",
                placeholder: "確認のため入力してください" %>
        </div>

        <!-- 変更ボタン -->
        <div class="text-center pt-4">
          <%= f.submit "変更する",
                class: "bg-brand text-white font-semibold px-8 py-2 rounded-full shadow hover:bg-orange-600 transition duration-200" %>
        </div>
      </div>
    <% end %>

    <!-- 戻るボタン -->
    <div class="text-center mt-8">
      <%= link_to '戻る', profile_path,
            class: "inline-block bg-gray-200 text-gray-700 px-6 py-2 rounded-full shadow hover:bg-gray-300 transition duration-200" %>
    </div>
  </div>
</div>