<nav id="admin-sidebar" data-sidebar-target="menu"
     class="fixed top-[61px] bottom-0 left-0 z-40 w-56 bg-white border-r border-orange-100
            transform -translate-x-full md:translate-x-0
            flex flex-col
            transition-transform duration-200">
  <div class="px-4 py-4 border-b border-orange-100">
    <p class="text-xs font-semibold text-gray-400 uppercase tracking-wide">
      メニュー
    </p>
  </div>
  <!-- メニュー項目 -->
  <ul class="flex-1 px-3 py-4 space-y-1 text-sm">
    <!-- ダッシュボード -->
    <li>
      <%= link_to admin_root_path,
          class: "flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-orange-50 #{current_page?(admin_root_path) ? 'bg-orange-100 font-semibold' : ''}" do %>
        <i class="fa-solid fa-gauge-high text-base text-gray-700"></i>
        <span class="<%= current_page?(admin_root_path) ? 'text-orange-600' : 'text-gray-700' %>">
          ダッシュボード
        </span>
      <% end %>
    </li>

    <!-- ユーザー管理 -->
    <li>
      <%= link_to admin_users_path,
          class: "flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-orange-50
          #{current_page?(admin_users_path) ? 'bg-orange-100 font-semibold' : ''}" do %>
        <i class="fa-solid fa-users text-base text-gray-700"></i>
        <span class="<%= current_page?(admin_users_path) ? 'text-orange-600' : 'text-gray-700' %>">
          ユーザー管理
        </span>
      <% end %>
    </li>

    <!-- 家族共有管理 -->
    <li>
      <%= link_to admin_families_path,
          class: "flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-orange-50
                  #{current_page?(admin_families_path) ? 'bg-orange-100 font-semibold' : ''}" do %>
        <i class="fa-solid fa-people-group text-base text-gray-700"></i>
        <span class="<%= current_page?(admin_families_path) ? 'text-orange-600' : 'text-gray-700' %>">
          家族共有管理
        </span>
      <% end %>
    </li>

    <!-- お問い合わせ管理 -->
    <li>
      <%= link_to admin_contacts_path,
          class: "flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-orange-50
                  #{current_page?(admin_contacts_path) ? 'bg-orange-100 font-semibold' : ''}" do %>
        <i class="fa-solid fa-envelope text-base text-gray-700"></i>
        <span class="<%= current_page?(admin_contacts_path) ? 'text-orange-600' : 'text-gray-700' %>">
          お問い合わせ管理
        </span>
      <% end %>
    </li>

    <!-- 統計パネル -->
    <li>
      <%= link_to admin_stats_path,
          class: "flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-orange-50
                  #{current_page?(admin_stats_path) ? 'bg-orange-100 font-semibold' : ''}" do %>
        <i class="fa-solid fa-chart-line text-base text-gray-700"></i>
        <span class="<%= current_page?(admin_stats_path) ? 'text-orange-600' : 'text-gray-700' %>">
          統計パネル
        </span>
      <% end %>
    </li>

    <!-- サービス管理 -->
    <li>
      <%= link_to admin_service_path,
          class: "flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-orange-50
                  #{current_page?(admin_service_path) ? 'bg-orange-100 font-semibold' : ''}" do %>
        <i class="fa-solid fa-wrench text-base text-gray-700"></i>
        <span class="<%= current_page?(admin_service_path) ? 'text-orange-600' : 'text-gray-700' %>">
          サービス管理
        </span>
      <% end %>
    </li>

    <!-- 設定 -->
    <li>
      <%= link_to admin_settings_path,
          class: "flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-orange-50
                  #{current_page?(admin_settings_path) ? 'bg-orange-100 font-semibold' : ''}" do %>
        <i class="fa-solid fa-gear text-base text-gray-700"></i>
        <span class="<%= current_page?(admin_settings_path) ? 'text-orange-600' : 'text-gray-700' %>">
          設定
        </span>
      <% end %>
    </li>
  </ul>

  <!-- 下部メニュー（通常画面へ / ログアウト） -->
  <div class="px-4 py-4 border-t border-orange-100 space-y-3">

    <!-- 通常画面へ -->
    <%= link_to home_path,
          class: "block w-full text-center px-3 py-2 rounded-lg border border-orange-200
                  text-gray-700 hover:text-orange-600 hover:border-orange-300 transition" do %>
      <i class="fa-solid fa-arrow-left mr-1"></i> 通常画面へ
    <% end %>

    <!-- ログアウト -->
    <%= button_to "ログアウト",
          destroy_user_session_path,
          method: :delete,
          data: { turbo_confirm: "ログアウトしますか？" },
          class: "block w-full text-center px-3 py-2 rounded-lg bg-orange-500 text-white
                  hover:bg-orange-600 transition" %>
  </div>
</nav>
