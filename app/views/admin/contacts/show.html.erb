<% content_for :title, "お問い合わせ詳細" %>

<section class="space-y-6">

  <%= link_to admin_contacts_path,
      class: "inline-flex items-center gap-2 px-3 py-1.5 bg-orange-100
              text-orange-700 rounded-lg text-sm font-semibold hover:bg-orange-200 transition" do %>
    <i class="fa-solid fa-arrow-left"></i> 一覧に戻る
  <% end %>

  <div class="bg-white rounded-2xl shadow-md border border-orange-100 p-6 space-y-4">

    <h1 class="text-xl font-bold text-gray-800">お問い合わせ内容</h1>

    <p><strong>名前：</strong> <%= @contact.nickname %></p>
    <p><strong>メール：</strong> <%= @contact.email %></p>
    <p><strong>送信日：</strong> <%= @contact.created_at.strftime("%Y-%m-%d %H:%M") %></p>

    <div class="mt-4">
      <strong>内容：</strong>
      <div class="mt-2 p-4 bg-gray-50 rounded-xl border text-gray-700 whitespace-pre-line">
        <%= @contact.body %>
      </div>
    </div>

    <!-- ステータス変更 -->
    <div class="mt-6">
      <%= form_with model: [:admin, @contact], method: :patch, local: true do |f| %>
        <div class="flex items-center gap-3">
          <%= f.select :status,
                Contact.statuses.keys.map { |k|
                  [I18n.t("activerecord.enums.contact.status.#{k}"), k]
                },
                {},
                class: "border rounded-lg p-2" %>
          <%= f.submit "更新", class: "px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600" %>
        </div>
      <% end %>
    </div>

    <!-- 内部メモ -->
    <div class="mt-8 bg-yellow-50 rounded-2xl shadow-md border border-yellow-200 p-6">
      <h2 class="text-lg font-bold text-gray-800 mb-3 flex items-center gap-2">
        <i class="fa-solid fa-note-sticky text-yellow-600"></i>
        内部メモ（管理者専用）
      </h2>

      <% if @contact.admin_memo.present? %>
        <p class="text-xs text-gray-600 mb-3">
          最終更新：<%= @contact.updated_at.strftime("%Y-%m-%d %H:%M") %>
        </p>
      <% end %>

      <%= form_with model: [:admin, @contact], method: :patch, local: true do |f| %>
        <div>
          <%= f.text_area :admin_memo,
                rows: 5,
                placeholder: "ここにメモを入力（ユーザーには見えません）",
                class: "w-full border border-yellow-300 bg-white rounded-lg p-3 text-sm focus:ring-2 focus:ring-yellow-500" %>
        </div>

        <div class="text-right mt-3">
          <%= f.submit "メモを保存",
                class: "px-5 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg font-semibold shadow-sm transition" %>
        </div>
      <% end %>
    </div>
  </div>
</section>