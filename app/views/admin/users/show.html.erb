<% content_for :title, "ユーザー詳細" %>

<section class="space-y-8">
  <div>
    <%= link_to admin_users_path,
        class: "inline-flex items-center gap-2 px-3 py-1.5 bg-orange-100 
                text-orange-700 rounded-lg text-sm font-semibold
                hover:bg-orange-200 transition" do %>
      <i class="fa-solid fa-arrow-left"></i>
      一覧に戻る
    <% end %>
  </div>

  <!-- タイトルカード -->
  <div class="bg-white rounded-2xl shadow-md border border-orange-100 p-6 flex items-center justify-between">
    <div class="flex items-center gap-4">
      <div class="w-14 h-14 rounded-full overflow-hidden bg-gray-100 border border-gray-200 flex items-center justify-center">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "w-full h-full object-cover rounded-full" %>
        <% else %>
          <i class="fa-solid fa-user text-gray-400 text-4xl"></i>
        <% end %>
      </div>

      <div>
        <h1 class="text-2xl font-bold text-gray-800"><%= @user.nickname %></h1>
        <p class="text-gray-500 text-sm"><%= @user.email %></p>
      </div>
    </div>

    <span class="px-3 py-1 rounded-lg text-sm font-semibold
      <%= @user.admin? ? 'bg-red-100 text-red-600' : 'bg-gray-100 text-gray-600' %>">
      <%= @user.admin? ? "管理者" : "一般ユーザー" %>
    </span>
  </div>

  <!-- 基本情報 -->
  <div class="bg-white rounded-2xl shadow-md border border-orange-100 p-6">
    <h2 class="text-lg font-bold text-gray-800 mb-4">基本情報</h2>

    <div class="space-y-2 text-gray-700">
      <p>登録日：<%= @user.created_at.strftime("%Y-%m-%d") %></p>
      <p>最終ログイン：<%= @user.last_sign_in_at&.strftime("%Y-%m-%d %H:%M") || "未ログイン" %></p>

      <p>ファミリー：
        <% if @user.family.present? %>
          <span class="font-semibold"><%= @user.family.name %></span>
          （役割：<%= @user.family_role %>）
        <% else %>
          個人（ファミリー未所属）
        <% end %>
      </p>
    </div>
  </div>

  <% unless @user.status_banned? %>
    <div class="bg-white rounded-2xl shadow-md border border-red-200 p-5">
      <h2 class="text-lg font-bold text-gray-800 mb-3">管理者操作</h2>

      <p class="text-sm text-gray-600 mb-2">
        このユーザーを BAN するとログインできなくなります。
      </p>

      <%= form_with url: ban_admin_user_path(@user), method: :patch, local: true do |f| %>
        <textarea
          name="reason"
          rows="2"
          class="w-full border border-gray-300 rounded-lg p-2 text-sm"
          placeholder="BAN理由（任意）"></textarea>

        <%= f.submit "ユーザーをBANする",
          data: { turbo_confirm: "本当にBANしますか？\nこのユーザーはログインできなくなります。" },
          class: "mt-3 px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg font-semibold" %>
      <% end %>
    </div>
  <% end %>

  <% if @user.status_banned? %>
    <div class="bg-red-50 rounded-2xl shadow-md border border-red-200 p-5">
      <h2 class="text-lg font-bold text-red-700 mb-2">このユーザーはBANされています</h2>

      <% if @user.banned_reason.present? %>
        <p class="text-sm text-red-600">理由：<%= @user.banned_reason %></p>
      <% end %>

      <%= button_to "BANを解除する",
        unban_admin_user_path(@user),
        method: :patch,
        data: { turbo_confirm: "BANを解除しますか？\nこのユーザーは再びログイン可能になります。" },
        class: "mt-3 px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg font-semibold" %>
    </div>
  <% end %>

  <!-- 内部メモ -->
  <div class="bg-white rounded-2xl shadow-md border border-orange-100 p-6">
    <h2 class="text-lg font-bold text-gray-800 mb-3">内部メモ（管理者のみ）</h2>
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
      <%= f.text_area :admin_memo,
        rows: 4,
        class: "w-full border border-gray-300 rounded-lg p-3 text-sm focus:ring-orange-400 focus:border-orange-400",
        placeholder: "例：スパム報告あり / 問い合わせ対応履歴など" %>
      <%= f.submit "メモを保存する",
        class: "mt-3 px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white rounded-lg font-semibold" %>
    <% end %>
  </div>

  <!-- 利用データまとめ -->
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
    <!-- 商品 -->
    <div class="bg-white rounded-2xl shadow-sm border border-orange-100 p-4 text-center">
      <p class="text-xs text-gray-500">登録商品数</p>
      <p class="text-2xl font-bold text-gray-800"><%= @user.products_count %></p>
    </div>

    <!-- 記録 -->
    <div class="bg-white rounded-2xl shadow-sm border border-orange-100 p-4 text-center">
      <p class="text-xs text-gray-500">価格記録数</p>
      <p class="text-2xl font-bold text-gray-800"><%= @user.price_records_count %></p>
    </div>

    <!-- ショップ -->
    <div class="bg-white rounded-2xl shadow-sm border border-orange-100 p-4 text-center">
      <p class="text-xs text-gray-500">登録店舗数</p>
      <p class="text-2xl font-bold text-gray-800"><%= @user.shops.count %></p>
    </div>

    <!-- ショッピングリスト -->
    <div class="bg-white rounded-2xl shadow-sm border border-orange-100 p-4 text-center">
      <p class="text-xs text-gray-500">買い物リスト</p>
      <p class="text-2xl font-bold text-gray-800"><%= @user.shopping_items.count %></p>
    </div>
  </div>


  <!-- 最近の記録：価格 -->
  <div class="bg-white rounded-2xl shadow-md border border-orange-100 p-6">
    <h2 class="text-lg font-bold text-gray-800 mb-4">最近の価格記録</h2>

    <% if @recent_price_records.empty? %>
      <p class="text-gray-500 text-sm">記録がありません。</p>
    <% else %>
      <ul class="space-y-3">
        <% @recent_price_records.each do |pr| %>
          <li class="flex justify-between items-center bg-orange-50/40 px-4 py-2 rounded-xl">
            <span>
              <strong><%= pr.product.name %></strong>
              （<%= pr.shop&.name || "不明" %>）
            </span>
            <span class="text-gray-800 font-semibold"><%= pr.price %>円</span>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <!-- 最近の登録商品 -->
  <div class="bg-white rounded-2xl shadow-md border border-orange-100 p-6">
    <h2 class="text-lg font-bold text-gray-800 mb-4">最近登録した商品</h2>
    <% if @recent_products.empty? %>
      <p class="text-gray-500 text-sm">まだ商品が登録されていません。</p>
    <% else %>
      <ul class="space-y-3">
        <% @recent_products.each do |p| %>
          <li class="flex justify-between items-center bg-gray-50 px-4 py-2 rounded-xl">
            <span><%= p.name %></span>
            <span class="text-gray-400 text-xs"><%= p.created_at.strftime("%Y-%m-%d") %></span>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</section>
