<div class="min-h-screen bg-base text-gray-800 py-10 px-4 sm:px-6 md:px-10">
  <div class="w-full max-w-md sm:max-w-lg md:max-w-xl mx-auto bg-white rounded-2xl shadow-card p-6 sm:p-8 border border-orange-100">

    <!-- 戻るボタン -->
    <%= link_to categories_path,
          class: "inline-flex items-center text-gray-600 hover:text-brand mb-4 transition-colors duration-200" do %>
      <i class="fa-solid fa-arrow-left mr-2"></i>
      一覧に戻る
    <% end %>

    <!-- タイトル -->
    <h1 class="text-xl sm:text-2xl font-bold text-center text-brand mb-4"><%= @category.name %></h1>

    <!-- メモ表示 -->
    <% if @category.memo.present? && @category.memo.strip != "" %>
      <p class="text-gray-600 text-sm sm:text-base mb-6 bg-orange-50 p-3 rounded-lg border border-orange-100 leading-relaxed whitespace-pre-line">
        <%= @category.memo.strip %>
      </p>
    <% end %>

    <!-- 商品リスト -->
    <% if @products.empty? %>
      <p class="text-center text-gray-500 text-sm py-4">このカテゴリーに商品がまだ登録されていません。</p>
    <% else %>
      <ul class="divide-y divide-gray-200">
        <% @products.each do |product| %>
          <li class="py-3 flex justify-between items-center hover:bg-orange-50 px-2 rounded-lg transition">
            <!-- 商品名 + 画像 -->
            <%= link_to product_path(product), class: "flex items-center gap-3 flex-1" do %>
              <!-- 商品名 -->
              <span class="text-base sm:text-lg text-gray-800 font-medium break-words flex-1">
                <%= product.name %>
              </span>
              <!-- 画像 -->
              <% if product.image.attached? %>
                <%= image_tag product.image,
                      class: "w-10 h-10 sm:w-12 sm:h-12 rounded-full object-cover border border-orange-200 shadow-sm flex-shrink-0" %>
              <% end %>
            <% end %>

            <!-- メニュー -->
            <%= link_to edit_product_path(product),
                  class: "text-gray-400 hover:text-orange-500 transition text-lg sm:text-xl ml-2 flex-shrink-0" do %>
              <i class="fa-solid fa-ellipsis-vertical"></i>
            <% end %>
          </li>
        <% end %>
      </ul>

      <!-- ページネーション -->
      <div class="flex justify-center mt-6">
        <%= paginate @products %>
      </div>
    <% end %>

    <!-- 追加ボタン -->
    <div class="text-center mt-8">
      <%= link_to new_product_path(category_id: @category.id),
            class: "inline-flex items-center justify-center bg-brand hover:bg-orange-600 text-white font-semibold px-6 py-2 rounded-full shadow-md transition duration-200" do %>
        <i class="fa-solid fa-plus mr-2"></i>
        商品を追加
      <% end %>
    </div>
  </div>
</div>