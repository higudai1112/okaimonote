<div class="min-h-screen bg-base text-gray-800 flex flex-col items-center py-10 px-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-card p-8 border border-orange-100">

    <!-- 戻るボタン -->
    <%= link_to categories_path, class: "inline-flex items-center text-gray-600 hover:text-brand mb-4 transition-colors duration-200" do %>
      <i class="fa-solid fa-arrow-left mr-2"></i>
      一覧に戻る
    <% end %>

    <!-- 見出し -->
    <h1 class="text-2xl font-bold text-center text-brand mb-6">カテゴリーを編集</h1>

    <!-- エラーメッセージ -->
    <%= render "shared/error_message", resource: @category %>

    <!-- 編集フォーム -->
    <%= form_with model: @category, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :name, "カテゴリー名", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_field :name,
              placeholder: "例：日用品",
              class: "w-full rounded-xl border-gray-300 px-4 py-2 focus:ring-2 focus:ring-brand focus:outline-none transition placeholder-gray-400" %>
      </div>

      <div>
        <%= f.label :memo, "メモ", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_area :memo,
              rows: 3,
              placeholder: "補足情報など",
              class: "w-full rounded-xl border-gray-300 px-4 py-2 focus:ring-2 focus:ring-brand focus:outline-none transition placeholder-gray-400" %>
      </div>

      <div class="pt-3 text-center">
        <%= f.submit "更新する",
              class: "w-full bg-brand text-white font-semibold py-2.5 rounded-full shadow hover:bg-orange-600 transition duration-200 active:scale-[0.98]" %>
      </div>
    <% end %>

    <!-- Stimulus confirm 対応 削除ボタン -->
    <div data-controller="confirm" class="text-center mt-6 relative">
      <%= button_to "削除する",
            category_path(@category),
            method: :delete,
            data: {
              action: "click->confirm#confirm",
              confirm_message: "このカテゴリーを削除しますか？"
            },
            class: "w-full text-red-600 border border-red-400 hover:bg-red-50 font-semibold py-2.5 rounded-full shadow-sm transition duration-200" %>

      <!-- 共通確認モーダル -->
      <div data-confirm-target="modal"
           class="hidden fixed inset-0 bg-black/40 flex justify-center items-center z-50">
        <div class="bg-white rounded-2xl p-6 shadow-xl w-80 text-center border border-orange-100">
          <p data-confirm-target="message" class="text-gray-700 mb-4">
            このカテゴリーを削除しますか？
          </p>

          <div class="flex justify-center gap-4">
            <button data-action="click->confirm#proceed"
                    class="bg-red-500 text-white px-4 py-2 rounded-xl hover:bg-red-600 shadow">
              削除
            </button>
            <button data-action="click->confirm#cancel"
                    class="bg-gray-200 text-gray-700 px-4 py-2 rounded-xl hover:bg-gray-300">
              キャンセル
            </button>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>