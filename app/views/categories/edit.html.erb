<%= link_to "← 戻る", request.referer || categories_path, class: "text-sm text-gray-500 mb-4 inline-block" %>
<h1 class="text-xl font-bold mb-6">カテゴリーを編集</h1>

<%= render "shared/error_message", resource: @category %>

<%= form_with model: @category, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :name, "カテゴリー名", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "form-control w-full", placeholder: "日用品" %>
  </div>

  <div class="mb-6">
    <%= f.label :memo, "メモ", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :memo, rows: 3, class: "form-control w-full", placeholder: "補足情報など" %>
  </div>

  <%= f.submit "更新する", class: "btn btn-primary w-full py-2 text-white font-semibold rounded mb-4" %>
<% end %>

  <div class="text-center">
    <%= button_to "削除する",
          category_path(@category),
          method: :delete,
          data: { turbo_confirm: "本当に削除しますか？" },
          class: "btn btn-danger border border-red-500 text-red-600 hover:bg-red-50 w-full py-2 rounded" %>
  </div>
