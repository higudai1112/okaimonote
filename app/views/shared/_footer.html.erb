      <i class="fa fa-shopping-cart text-2xl"></i>
      <p class="text-xs">カート</p>
    </div>
  <% end %>

  <%= link_to settings_path, data: { turbo: false },
      class: "footer-link text-center #{current_page?(settings_path) ? 'text-orange-500' : 'text-gray-400'} hover:text-orange-400" do %>
    <div class="text-center">
      <i class="fa fa-cog text-2xl"></i>
      <p class="text-xs">設定</p>
    </div>
  <% end %>
</div>