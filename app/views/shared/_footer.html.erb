      <i class="fa fa-list text-2xl"></i>
      <p class="text-xs">登録リスト</p>
    </div>
  <% end %>

  <%= link_to new_price_record_path, data: { turbo: false },
      class: "footer-link text-center #{current_page?(new_price_record_path) ? 'text-orange-500' : 'text-gray-400'} hover:text-orange-400" do %>
