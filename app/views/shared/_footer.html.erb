<div class="footer fixed bottom-0 w-full bg-white border-t flex justify-around py-2" >
  <%= link_to home_path, data: { turbo: false },
      class: "footer-link text-center #{current_page?(home_path) ? 'text-orange-500' : 'text-gray-400'} hover:text-orange-400" do %>
    <div class="text-center">
      <i class="fa fa-home text-2xl"></i>
      <p class="text-xs">HOME</p>
    </div>
  <% end %>

  <%= link_to lists_path, data: { turbo: false },
      class: "footer-link text-center #{current_page?(lists_path) ? 'text-orange-500' : 'text-gray-400'} hover:text-orange-400" do %>
