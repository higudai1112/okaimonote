<footer class="fixed bottom-0 left-0 w-full bg-white border-t shadow-inner flex justify-around items-center py-2 md:py-3 z-50">
  <% footer_links = [
    { path: home_path, icon: 'fa-solid fa-home', label: 'HOME' },
    { path: lists_path, icon: 'fa-solid fa-list', label: '登録リスト' },
    { path: new_price_record_path, icon: 'fa-solid fa-plus-square', label: '追加' },
    { path: cart_path, icon: 'fa-solid fa-shopping-cart', label: 'カート' },
    { path: settings_path, icon: 'fa-solid fa-cog', label: '設定' }
  ] %>

  <% footer_links.each do |link| %>
    <% active = current_page?(link[:path]) %>
    <%= link_to link[:path],
      data: { turbo: false },
      class: "flex flex-col items-center justify-center w-1/5 md:w-auto #{active ? 'text-orange-500' : 'text-gray-400'} hover:text-orange-400 transition-colors" do %>

      <i class="<%= link[:icon] %> fa-xl md:fa-2xl mb-3"></i>
      <span class="text-[10px] md:text-xs tracking-tight"><%= link[:label] %></span>
    <% end %>
  <% end %>
</footer>